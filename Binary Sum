///https://www.codechef.com/problems/BINARYSUM?tab=statement

#include <bits/stdc++.h>
using namespace std;

int main() {
	
    int t;
    cin>>t;
    while(t--)
    {
        int n,k;
        cin>>n>>k;
        if(n%2!=0)
        {
            if(k==(n/2)+1|| k==n/2)
            {
                cout<<"YES"<<endl;
            }
            else
            {
                std::cout << "NO" << std::endl;
            }
        }
        else
        {
            if(k==n/2) 
            std::cout << "YES" << std::endl;
            else
            std::cout << "NO" << std::endl;
        }
    }
}
